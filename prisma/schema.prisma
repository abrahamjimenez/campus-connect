generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @db.Date
  description String
  dueDate     DateTime @db.Date
  free        Boolean
  images      String[]
  price       Int
  schoolYear  String[]
  skills      String[]
  title       String
  updatedAt   DateTime @db.Date
  userId      String   @db.ObjectId
  User        User     @relation(fields: [userId], references: [id])
}

model User {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  country        String?
  email          String   @unique
  firstName      String
  lastName       String
  passwordHash   String
  phone          String?
  state          String?
  paymentMethods String[]
  post           Post[]
}
